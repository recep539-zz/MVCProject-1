@model IEnumerable<AdvancedRepository.DTOs.CityList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Cities List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                City Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @item.CityId
                </td>
                <td>
                    @item.CityName
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CityId">Edit</a> |
                    <a class="btn btn-dark" href="/County/Detail/@item.CityId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CityId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <a class="btn btn-light" asp-action="Recover">Recover</a>
</div>
