@model IEnumerable<AdvancedRepository.DTOs.EmployeeList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Recover Employees List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Number (Id)
            </th>
            <th>
                Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Birthday
            </th>
            <th>
                Salary
            </th>
            <th>
                Manager Name
            </th>
            <th>
                Manager Or Not?
            </th>
            <th>
                Address
            </th>
            <th>
                Contact
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.Birthday
                </td>
                <td>
                    @item.Salary
                </td>
                <td>
                    @item.ManagerName
                </td>
                <td>
                    @item.IsManager
                </td>
                <td>
                    @item.FullAddress
                </td>
                <td>
                    @item.PhoneNumber
                </td>         
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-action="List">Back to List</a>
</div>


