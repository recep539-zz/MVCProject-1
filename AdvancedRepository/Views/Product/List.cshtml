@model IEnumerable<AdvancedRepository.DTOs.ProductList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #resim{
        height:200px;width:200px;
    }
</style>
<h1>Products List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Image
            </th>
            <th>
                Company Name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Unit Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.ProductName
            </td>
            <td id="resim">
                <img src="@item.ProductImage" alt="Image" />
            </td>

            <td>
                @item.CompanyName
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.UnitName
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
         }
    </tbody>
</table>
<div>
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <a class="btn btn-light" asp-action="Recover">Recover</a>
</div>

