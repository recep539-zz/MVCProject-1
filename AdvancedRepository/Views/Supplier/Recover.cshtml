@model IEnumerable<AdvancedRepository.DTOs.SupplierList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Recover Suppliers List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Number (Id)
            </th>
            <th>
                Company Name
            </th>
            <th>
                Address
            </th>
            <th>
                Contact
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SupplierId
                </td>
                <td>
                    @item.CompanyName
                </td>
                <td>
                    @item.FullAddress
                </td>
                <td>
                    @item.PhoneNumber
                </td>        
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-action="List">Back to List</a>
</div>

