@model IEnumerable<AdvancedRepository.DTOs.CategoryList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Recover Categories List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CategoryId
                </td>
                <td>
                    @item.CategoryName
                </td>
            </tr>
        }
    </tbody>
</table>
<div> 
    <a class="btn btn-secondary" asp-action="List">Back to List</a>
</div>

