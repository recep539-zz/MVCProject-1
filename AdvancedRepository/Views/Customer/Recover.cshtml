@model IEnumerable<AdvancedRepository.DTOs.CustomerList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Recover Customers List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Number (Id)
            </th>
            <th>
                Company Name
            </th>
            <th>
                Rate
            </th>
            <th>
                Address
            </th>
            <th>
                Contact
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CustomerId
                </td>
                <td>
                    @item.CustomerName
                </td>
                <td>
                    @item.Rating
                </td>
                <td>
                    @item.FullAddress
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-action="List">Back to List</a>
</div>



