@model AdvancedRepository.Models.ViewModels.BasketModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-5">
        <h4>Ürün Ekleme</h4>
        <hr />
        <form method="post">
            <label>Ürün</label>
            <select class="form-control" asp-for="Id">
                @foreach (var item in Model.ProductsSelect)
                {
                    <option value="@item.Id">@item.ProductName</option>
                }

            </select>
            <label>Adet</label>
            <input class="form-control" type="number" asp-for="Amount" />              
            <br />
            <input class="form-control btn btn-success" type="submit" value="OK" />
        </form>
    </div>
</div>
