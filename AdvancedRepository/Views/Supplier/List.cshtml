@model IEnumerable<AdvancedRepository.DTOs.SupplierList>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Suppliers List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Number (Id)
            </th>
            <th>
                Company Name
            </th>
            <th>
                Address
            </th>
            <th>
                Contact
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
            <tr>
                <td>
                    @item.SupplierId
                </td>
                <td>
                    @item.CompanyName
                </td>
                <td>
                    @item.FullAddress
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> | 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>
<div>
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <a class="btn btn-light" asp-action="Recover">Recover</a>
</div>
